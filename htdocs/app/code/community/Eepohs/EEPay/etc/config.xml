<config>
    <modules>
        <Eepohs_EEPay>
            <version>2.0.0</version>
        </Eepohs_EEPay>
    </modules>
    <global>
        <models>
            <eepay>
                <class>Eepohs_EEPay_Model</class>
            </eepay>
        </models>
        <helpers>
            <eepay>
                <class>Eepohs_EEPay_Helper</class>
            </eepay>
        </helpers>
        <blocks>
            <eepay>
                <class>Eepohs_EEPay_Block</class>
            </eepay>
        </blocks>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Eepohs_EEPay>
                    <files>
                        <default>Eepohs_EEPay.csv</default>
                    </files>
                </Eepohs_EEPay>
            </modules>
        </translate>
         <layout>
            <updates>
                <Eepohs_EEPay>
                    <file>eepohs/eepay.xml</file>
                </Eepohs_EEPay>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <Eepohs_EEPay>
                                            <title>Eepohs EEPay</title>
                                        </Eepohs_EEPay>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <Eepohs_EEPay>
                    <file>eepohs_eepay.xml</file>
                </Eepohs_EEPay>
            </updates>
        </layout>
        <routers>
            <eepay>
                <use>standard</use>
                <args>
                    <module>Eepohs_EEPay</module>
                    <frontName>eepay</frontName>
                </args>
            </eepay>
        </routers>
        <translate>
            <modules>
                <Eepohs_EEPay>
                    <files>
                        <default>Eepohs_EEPay.csv</default>
                    </files>
                </Eepohs_EEPay>
            </modules>
        </translate>
    </frontend>
    <default>
        <payment>
            <eepohs_seb>
                <active>0</active>
                <title>SEB</title>
                <order_status>pending</order_status>
                <gateway_url>https://www.seb.ee/cgi-bin/unet3.sh/un3min.r</gateway_url>
                <vk_snd_id></vk_snd_id>
                <private_key></private_key>
                <bank_certificate></bank_certificate>
                <private_key></private_key>
                <bank_certificate></bank_certificate>
                <order_confirmation>0</order_confirmation>
                <invoice_confirmation>1</invoice_confirmation>
                <model>eepay/seb</model>
                <payment_action>authorize</payment_action>
            </eepohs_seb>
            <eepohs_nordea>
                <active>0</active>
                <title>Nordea</title>
                <order_status>pending</order_status>
                <gateway_url></gateway_url>
                <service_provider></service_provider>
                <mac_key></mac_key>
                <order_confirmation>0</order_confirmation>
                <invoice_confirmation>1</invoice_confirmation>
                <model>eepay/nordea</model>
                <payment_action>authorize</payment_action>
            </eepohs_nordea>
            <eepohs_swedbank>
                <active>0</active>
                <title>Swedbank</title>
                <order_status>pending</order_status>
                <gateway_url></gateway_url>
                <vk_snd_id></vk_snd_id>
                <private_key></private_key>
                <bank_certificate></bank_certificate>
                <private_key></private_key>
                <bank_certificate></bank_certificate>
                <order_confirmation>0</order_confirmation>
                <invoice_confirmation>1</invoice_confirmation>
                <model>eepay/swedbank</model>
                <payment_action>authorize</payment_action>
            </eepohs_swedbank>
            <eepohs_sampo>
                <active>0</active>
                <title>Sampo</title>
                <order_status>pending</order_status>
                <gateway_url></gateway_url>
                <vk_snd_id></vk_snd_id>
                <private_key></private_key>
                <bank_certificate></bank_certificate>
                <private_key></private_key>
                <bank_certificate></bank_certificate>
                <order_confirmation>0</order_confirmation>
                <invoice_confirmation>1</invoice_confirmation>
                <model>eepay/sampo</model>
                <payment_action>authorize</payment_action>
            </eepohs_sampo>
            <eepohs_krediidipank>
                <active>0</active>
                <title>Krediidipank</title>
                <order_status>pending</order_status>
                <gateway_url></gateway_url>
                <vk_snd_id></vk_snd_id>
                <private_key></private_key>
                <bank_certificate></bank_certificate>
                <private_key></private_key>
                <bank_certificate></bank_certificate>
                <order_confirmation>0</order_confirmation>
                <invoice_confirmation>1</invoice_confirmation>
                <model>eepay/krediidipank</model>
                <payment_action>authorize</payment_action>
